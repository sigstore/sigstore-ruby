#!/usr/bin/env ruby
# frozen_string_literal: true

ENV["BUNDLE_GEMFILE"] = File.expand_path("../Gemfile", __dir__)
require "bundler/setup"

require "tmpdir"

tmp = Dir.mktmpdir

ENV.update(
  "HOME" => tmp,
  "XDG_DATA_HOME" => nil,
  "XDG_CACHE_HOME" => nil
)

require "sigstore/cli"
Sigstore::CLI.start(ARGV << "--no-update-trusted-root")
